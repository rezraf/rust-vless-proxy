# === Server config ===
VIAVLESS_LISTEN=0.0.0.0:443
VIAVLESS_UUID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
VIAVLESS_TLS_CERT=cert.pem
VIAVLESS_TLS_KEY=key.pem
VIAVLESS_WS_PATH=/ws

# === Client config ===
VIAVLESS_SOCKS_LISTEN=127.0.0.1:1080
VIAVLESS_SERVER_HOST=your-server.example.com
VIAVLESS_SERVER_PORT=443
VIAVLESS_SERVER_SNI=your-server.example.com
VIAVLESS_WS_PATH=/ws
VIAVLESS_UUID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# DPI evasion options
VIAVLESS_FRAGMENT=true
VIAVLESS_FRAGMENT_SIZE=40
VIAVLESS_PADDING=true
VIAVLESS_PADDING_MAX=256
# VIAVLESS_FAKE_SNI=www.google.com

# Logging
RUST_LOG=viavless=debug
