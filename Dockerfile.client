FROM rust:1.83-slim AS builder

RUN apt-get update && apt-get install -y cmake gcc g++ && rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY Cargo.toml Cargo.lock ./
COPY crates/ crates/

RUN cargo build --release -p viavless-client && strip target/release/viavless-client

FROM gcr.io/distroless/cc-debian12

COPY --from=builder /app/target/release/viavless-client /viavless-client

EXPOSE 1080

ENTRYPOINT ["/viavless-client"]
